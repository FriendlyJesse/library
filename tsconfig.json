{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "pretty": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["@dcloudio/types"]
  },
  "typedocOptions": {
    "name": "utils",
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "includeVersion": true
  },
  "include": [
    "src" 
  ]
}